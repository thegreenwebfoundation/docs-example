<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> {% include 'partials/css.njk' %}
    {% include 'partials/metadata.njk' %}
  </head>
  <body>
    <div class="drawer drawer-mobile">
      <input id="my-drawer-2" type="checkbox" aria-label="Expand mobile navigation menu" class="drawer-toggle"/>
      <div class="drawer-content">
        <div class="w-full navbar bg-base lg:hidden">
          <div class="flex-none lg:hidden">
            <label for="my-drawer-2" class="btn btn-square btn-ghost">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </label>
            <ul
              class="menu menu-horizontal max-w-xs w-60 md:w-full">
              <!-- Navbar menu content here -->
              <li class="">
                <a href="/" aria-label="Homepage">
                  <img
                    src="/img/logo_horizontal.svg"
                    alt="The Green Web Foundation typographic logo"
                    class="max-w-xs w-full"
                    height="48px"
                    width="200px"/>
                </a>
              </li>
            </ul>
          </div>
        </div>
        <!-- Page content here -->
        <div class="min-h-screen flex flex-col justify-between">
          <div class="p-6 pb-16 lg:py-8 lg:px-12">
            <div class="flex flex-col-reverse justify-between gap-6 xl:flex-row">
              <div class="prose w-full max-w-4xl flex-grow">
                {% if relatedPR or pageVersion %}
                  <div class="alert alert-warning mb-8">
                    <div>
                      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewbox="0 0 24 24"><path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77
                            1.333.192 3 1.732 3z"/>
                      </svg>
                      {% if relatedPR %}
                        <span>Warning: Some code used on this page relates to an open pull request -
                          <a href="{{ relatedPR }}">#{% getPrNumber relatedPR %}</a>.</span>
                      {% elif pageVersion !== repoVersion %}
                        <span>Warning: Some code used on this page refers to version
                          <a href="https://github.com/thegreenwebfoundation/co2.js/tree/v{{ pageVersion }}">{{ pageVersion }}</a>
                          of this library.</span>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
                {{ content | safe }}
              </div>
            </div>
          </div>
          {% include 'partials/footer.njk' %}
        </div>
      </div>
      <div class="drawer-side">
        <label for="my-drawer-2" class="drawer-overlay"></label>
        <div class="menu p-4 md:py-6 overflow-y-auto w-80 bg-black text-white">
          <ul>
            <li class="lg:block">
              <a href="/" aria-label="Homepage">
                <img
                  src="/img/logo_white_text.svg"
                  alt="The Green Web Foundation typographic logo"
                  class="max-h-full"
                  height="210px"
                  width="372px"/>
              </a>
            </li>
            <li>
              <a href="/" aria-label="Homepage">Home</a>
            </li>
            <li class="menu-title py-2">
              <span class="text-sm text-primary font-bold font-mono">Libraries</span>
            </li>
            <!-- Sidebar content here -->
            {%- for main in collections.main -%}
              <li>
                {% if main.data.repo == repo %}
                  {% set openCollapse = 'checked' %}
                {% else %}
                  {% set openCollapse = '' %}
                {% endif %}
                <ul tabindex="0" class="collapse collapse-arrow rounded-box">
                  <li>
                    <input type="checkbox" aria-label="Expand {{ main.data.libraryName }}" class="peer invisible absolute" {{ openCollapse }}/>
                    <div class="collapse-title">
                      <span class="collapse-title-text peer-checked:font-bold">{{ main.data.libraryName }}</span>
                    </div>
                    <ul class="collapse-content p-0 pt-1">
                      {% set navPages = collections.all | getDocumentsFromCollection(main.data.repo) | eleventyNavigation %}
                      {%- for entry in navPages %}
                        {% if sectionTitle != entry.sectionTitle %}
                          {% set sectionTitle = entry.sectionTitle %}
                          <li class="menu-title">
                            <p class="divider text-sm font-bold font-mono">{{ sectionTitle }}</p>
                          </li>
                        {% endif %}
                        <li {% if entry.url == page.url %} class="bg-secondary text-white pl-4" {% else %} class="pl-4" {% endif %}>
                          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                          {%- if entry.children.length -%}
                            {%- for child in entry.children %}
                              <li {% if child.url == page.url %} class="bg-secondary text-white pl-4" {% else %} class="pl-4" {% endif %}>
                                <a href="{{ child.url | url }}">{{ child.title }}</a>
                              {% endfor -%}
                            </li>
                          {%- endif -%}
                        </li>
                      </li>
                    {%- endfor %}
                  </li>
                </ul>
              </li>
            </ul>
          {%- endfor -%}
          <li class="menu-title py-2">
            <span class="text-sm text-primary font-bold font-mono">APIs</span>
            <!-- Sidebar content here -->
            {%- for main in collections.apiMain -%}
              <li>
                {% if main.data.repo and main.data.repo == repo %}
                  {% set openCollapse = 'checked' %}
                {% else %}
                  {% set openCollapse = '' %}
                {% endif %}
                <ul tabindex="0" class="collapse collapse-arrow rounded-box">
                  <li>
                    <input type="checkbox" aria-label="Expand {{ main.data.libraryName }}" class="peer invisible absolute" {{ openCollapse }}/>
                    <div class="collapse-title">
                      <span class="collapse-title-text peer-checked:font-bold">{{ main.data.libraryName }}</span>
                    </div>
                    <ul class="collapse-content p-0 pt-1">
                      {% set navPages = collections.all | getDocumentsFromCollection(main.data.repo) | eleventyNavigation %}
                      {%- for entry in navPages %}
                        {% if sectionTitle != entry.sectionTitle %}
                          {% set sectionTitle = entry.sectionTitle %}
                          <li class="menu-title">
                            <p class="divider text-sm font-bold font-mono">{{ sectionTitle }}</p>
                          </li>
                        {% endif %}
                        <li {% if entry.url == page.url %} class="bg-secondary text-white pl-4" {% else %} class="pl-4" {% endif %}>
                          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                          {%- if entry.children.length -%}
                            {%- for child in entry.children %}
                              <li {% if child.url == page.url %} class="bg-secondary text-white pl-4" {% else %} class="pl-4" {% endif %}>
                                <a href="{{ child.url | url }}">{{ child.title }}</a>
                              {% endfor -%}
                            </li>
                          {%- endif -%}
                        </li>
                      </li>
                    {%- endfor %}
                  </li>
                </ul>
              </li>
            </ul>
          {%- endfor -%}
        </li>
      </ul>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function (event) {
        const codeBlocks = document.querySelectorAll('code[class*="language-"]');
        codeBlocks.forEach(function (block) {
          const pre = block.parentNode;
          const copyButton = document.createElement('button');
          const svgIcon = `<svg width="24px" height="24px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 3.5C10.8954 3.5 10 4.39543 10 5.5H14C14 4.39543 13.1046 3.5 12 3.5ZM8.53513 3.5C9.22675 2.3044 10.5194 1.5 12 1.5C13.4806 1.5 14.7733 2.3044 15.4649 3.5H17.25C18.9069 3.5 20.25 4.84315 20.25 6.5V18.5C20.25 20.1569 19.1569 21.5 17.25 21.5H6.75C5.09315 21.5 3.75 20.1569 3.75 18.5V6.5C3.75 4.84315 5.09315 3.5 6.75 3.5H8.53513ZM8 5.5H6.75C6.19772 5.5 5.75 5.94772 5.75 6.5V18.5C5.75 19.0523 6.19772 19.5 6.75 19.5H17.25C18.0523 19.5 18.25 19.0523 18.25 18.5V6.5C18.25 5.94772 17.8023 5.5 17.25 5.5H16C16 6.60457 15.1046 7.5 14 7.5H10C8.89543 7.5 8 6.60457 8 5.5Z" fill="currentColor"></path>
          </svg>`
          copyButton.innerHTML = svgIcon;
          copyButton.classList.add('copy-button');
          pre.appendChild(copyButton);
          pre.style.position = 'relative';
          copyButton.style.position = 'absolute';
          copyButton.style.right = '0';
          copyButton.style.top = '0';
          copyButton.style.zIndex = '1';
          copyButton.style.border = 'none';
          copyButton.style.padding = '5px';
          copyButton.style.cursor = 'pointer';
          copyButton.style.fontSize = '14px';
          copyButton.addEventListener('click', function () {
            const contentToCopy = block.innerText;
            const tempTextarea = document.createElement('textarea');
            tempTextarea.value = contentToCopy;
            document.body.appendChild(tempTextarea);
            tempTextarea.select();
            document.execCommand('copy');
            document.body.removeChild(tempTextarea);
            const copiedIcon = `<svg width="24px" height="24px" viewBox="0 -0.5 25 25" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M5.5 12.5L10.167 17L19.5 8" stroke="#B4B4B8" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            fill="#B4B4B8"/>
            </svg>`;
            copyButton.innerHTML = copiedIcon;
            setTimeout(function () {
              copyButton.innerHTML = svgIcon;
            }, 2000);
          });
          
        });
      });
    </script>
    {% analytics %}
  </body>
</html>